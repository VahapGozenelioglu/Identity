@model UdemyIdentity.ViewModels.PasswordResetViewModel

@{
    ViewData["Title"] = "ResetPassword";
}

@if(ViewBag.status == "Success")
{
    <div class="alert alert-info">Reset password link is sent to your email successfully</div>
}

else
{
    <h4>Reset Password</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <div class="alert alert-info">
                Write your email address to reset your password. We will send you an email.
            </div>
            <form asp-action="ResetPassword">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Send" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
}



